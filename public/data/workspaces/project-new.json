{
  "id": "project-new-sectioned",
  "name": "Sectioned Project Form",
  "path": "/project-new-sectioned",
  "icon": "FaPlus",
  "gadgets": [
    {
      "name": "formDocumentGadget",
      "title": "Project",
      "icon": "FaFolder",
      "height": "100%",
      "colSpan": "col-span-12",
      "gadgetType": "formDocument",
      "gadgetOptions": {
        "fullWidthSection": true, 
        "sections": [
          {
            "sectionId": "general",
            "title": "General",
            "icon": "FaInfoCircle",  
            "groups": [
              {
                "groupId": "basicProjectInfo",
                "fields": [
                  { "type": "input", "label": "Project Name", "name": "projectName", "inputType": "text" },
                  { "type": "textarea", "label": "Description", "name": "description" }
                ]
              }
            ]
          },
          {
            "sectionId": "selectDataSets",
            "title": "Data Sets",
            "icon": "FaDatabase",  
            "groups": [
              {
                "groupId": "dataSource",
                "fields": [
                  { "type": "input", "label": "Data Source Name", "name": "dataSourceName", "inputType": "text" },
                  { "type": "checkbox", "label": "Enable Sync", "name": "enableSync", "options": [] }
                ]
              }
            ]
          },
          {
            "sectionId": "workflows",
            "title": "Workflows",
            "icon": "FaCogs",  
            "groups": [
              {
                "groupId": "workflowSettings",
                "fields": [
                  { "type": "input", "label": "Workflow Name", "name": "workflowName", "inputType": "text" },
                  { "type": "select", "label": "Workflow Status", "name": "workflowStatus", "options": [
                      { "label": "Active", "value": "active" },
                      { "label": "Inactive", "value": "inactive" }
                    ]
                  }
                ]
              }
            ]
          },
          {
            "sectionId": "dashboards",
            "title": "Dashboards",
            "icon": "FaChartPie",  
            "groups": [
              {
                "groupId": "dashboardConfig",
                "fields": [
                  { "type": "input", "label": "Dashboard Title", "name": "dashboardTitle", "inputType": "text" },
                  { "type": "textarea", "label": "Dashboard Description", "name": "dashboardDescription" }
                ]
              }
            ]
          },
          {
            "sectionId": "userPrivileges",
            "title": "User Privileges",
            "icon": "FaUserShield",  
            "groups": [
              {
                "groupId": "userAccess",
                "fields": [
                  { "type": "input", "label": "User Role", "name": "userRole", "inputType": "text" },
                  { "type": "checkbox", "label": "Admin Access", "name": "adminAccess", "options": [] }
                ]
              }
            ]
          },
          {
            "sectionId": "settings",
            "title": "Settings",
            "icon": "FaWrench",  
            "groups": [
              {
                "groupId": "configSettings",
                "fields": [
                  { "type": "input", "label": "Config Name", "name": "configName", "inputType": "text" },
                  { "type": "radio", "label": "Config Mode", "name": "configMode", "options": [
                      { "label": "Automatic", "value": "automatic" },
                      { "label": "Manual", "value": "manual" }
                    ]
                  }
                ]
              }
            ]
          }
        ],
        "footer": {
          "buttons": [
            { "label": "Save", "action": "save" },
            { "label": "Cancel", "action": "cancel" }
          ]
        }
      }
    }
  ]
}
